<div class="card" style="width: 100%;">
  <%= image_tag 'cover-photo.jpg', class: "card-img-top cover-height" %>
  <div class="card-body">
    <h3 class="card-title"><%= @friend.first_name %> <%=@friend.last_name%></h3>
    <p class="card-text">This is <%=@friend.first_name %>'s profile. You can view, edit or delete your friend in this page.</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>Email</strong>: <%= @friend.email %></li>
    <li class="list-group-item"><strong>Facebook</strong>: <%= @friend.phone %></li>
    <li class="list-group-item"><strong>Phone</strong>: <%= @friend.facebook %></li>
  </ul>
  <div class="card-body wrapper">
    <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-outline-info btn-sm" %>
    <%= link_to "Back", friends_path, class: "btn bg-custom btn-sm" %>
    <%= button_to "Delete", @friend, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-sm btn-outline-danger btn-float-right" %>
  </div>
</div>

