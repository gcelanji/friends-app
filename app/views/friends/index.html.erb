<h1>Friends</h1>

<div id="friends">
<table class="table table-hover">
  <thead class="bg-custom">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Facebook</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td><%= link_to friend.first_name + ' ' + friend.last_name, friend, class: "link-dark" %>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.facebook %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-outline-info btn-sm" %>
